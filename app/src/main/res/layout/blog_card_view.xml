<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_HL"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Blog Image -->
            <ImageView
                android:id="@+id/blogImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample"
                android:contentDescription="blog_image" />

            <!-- Blog Name -->
            <TextView
                android:id="@+id/blogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blog Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <!-- Blog Description -->
            <TextView
                android:id="@+id/blogDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip Location"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:paddingBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/blogDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Nov 2024"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="6dp" />

                <TextView
                    android:id="@+id/blogTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM"
                    android:textSize="14sp"
                    android:textColor="@color/dark_gray"
                    android:drawableLeft="@drawable/ic_clock"
                    android:drawablePadding="6dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
