<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the button color -->
    <solid android:color="@color/purple_dark" /> <!-- Replace with your desired color -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: Button border/stroke -->
    <stroke
        android:width="2dp"
        android:color="@color/background_HL" />

    <!-- Optional: Inner padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
